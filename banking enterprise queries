create database sumabankingenterprise;
use sumabankingenterprise;

create table branch
( branch_name varchar(20),
branch_city varchar(20),
assets int,
primary key(branch_name));

desc branch;

create table accounts
( acc_no int,
branch_name varchar(20),
balance int,
primary key(acc_no),
foreign key(branch_name) references branch(branch_name) on delete cascade);

desc accounts;

create table depositer
(customer_name varchar(15),
customer_street varchar(50),
customer_city varchar(20),
primary key(customer_name));

desc depositer;


create table loan
(loan_no int,
branch_name varchar(20),
amount int,
primary key(loan_no),
foreign key(branch_name) references branch(branch_name) on delete cascade);

desc loan;

create table borrrower
(customer_name varchar(15),
loan_no int,
primary key(customer_name,loan_no),
foreign key(customer_name) references depositer(customer_name) on delete cascade,
foreign key(loan_no) references loan(loan_no) on delete cascade);
 
desc borrrower;

create table customeraccount
( acc_no int,
customer_name varchar(15),
primary key(acc_no, customer_name),
foreign key(acc_no) references accounts (acc_no) on delete cascade,
foreign key(customer_name) references depositer(customer_name) on delete cascade);



