select * from customeraccount;


select ca.customer_name from customeraccount ca, accounts a 
where a.acc_no = ca.acc_no 
and a.branch_name = 'branch2'
group by ca.customer_name 
having count(*) >= 2;


select ca.customer_name
from customeraccount ca, accounts a, branch b 
where ca.acc_no=a.acc_no and a.branch_name = b.branch_name and b.branch_city = 'bangalore';

select ca.customer_name
from  accounts a, branch b 
where ca.acc_no=a.acc_no and a.branch_name = b.branch_name and b.branch_city = 'bangalore';


select * from accounts;
 select ca.customer_name
  from customeraccount ca
  ,accounts a
 where ca.acc_no = a.acc_no and a.branch_name = 'branch1' and a.branch_name = 'branch6';
 select customer_name
 from customeraccount
 where acc_no = ALL(
select acc_no
from accounts
where branch_name in  (
 select branch_name 
 from branch
 where branch_city='jaynagar')
 );
 
 
